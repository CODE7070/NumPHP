{
    "name": "NumPHP/NumPHP",
    "description": "NumPHP is the fundamental package for scientific computing with PHP",
    "license": "MIT",
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpmd/phpmd" : "*",
        "squizlabs/php_codesniffer": "*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "NumPHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "NumPHPTest\\": "tests/"
        }
    }
}
